{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && npm install && npx encore build",
    "watchPatterns": [
      "backend/**"
    ]
  },
  "deploy": {
    "startCommand": "cd backend && npx encore run --env=production",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "ENCORE_ENV": "production",
        "NODE_ENV": "production"
      }
    },
    "staging": {
      "variables": {
        "ENCORE_ENV": "staging",
        "NODE_ENV": "staging"
      }
    }
  }
}
