{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && npm install && ./node_modules/.bin/encore build",
    // Ou "npm run build" se vocÃª tiver um script "build": "encore build" no package.json do backend
    "watchPatterns": ["backend/**"]
  },
  "deploy": {
    "startCommand": "cd backend && encore run --env=production",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300
  }
}
